<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
  "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
  "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>	

	<action-mappings>
		
		<!-- =============Example============== 
		<action path="/module/FunctionAction" type="com.tbb.module.action.FunctionAction">
			<forward name="redoQuery" path="/module/FunctionAction.do?method=query" redirect="true"/>
			<forward name="query" path="module.function.list" />
			<forward name="add" path="module.function.add" />
			<forward name="edit" path="module.function.edit" />
			<forward name="view" path="module.function.view" />
		</action>
		-->
		
		<action path="/archive/IndexAction" type="com.tbb.archive.action.IndexAction">
			<forward name="view" path="archive.index.view" />
		</action>
		
		<action path="/archive/AllCaseAction" type="com.tbb.archive.action.AllCaseAction">
			<forward name="redoQuery" path="/archive/AllCaseAction.do?method=query" 
				redirect="true"/>
			<forward name="query" path="archive.all_case.list" />
			<forward name="view" path="archive.all_case.view" />
		</action>
		
		<action path="/archive/CaseReportAction" type="com.tbb.archive.action.CaseReportAction">			
			<forward name="query" path="archive.case_report.list" />
		</action>
				
	</action-mappings>
	
</struts-config>